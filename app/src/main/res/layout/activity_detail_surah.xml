<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailSurahActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bgdetail">

                <TextView
                    android:id="@+id/tvNamaSurah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/white"
                    android:textSize="35dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvJumlahAyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayat Ke"
                    android:textColor="@color/white"
                    android:layout_below="@+id/tvNamaSurah"/>

                <TextView
                    android:id="@+id/tvNamaArab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tulisan Arab"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/tvJumlahAyat"/>

                <TextView
                    android:id="@+id/tvNamaKompleks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/white"
                    android:layout_below="@+id/tvNamaArab"
                    android:paddingBottom="30dp"/>

                <TextView
                    android:id="@+id/tvTurun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tempat Turun Surah"
                    android:textColor="@color/white"
                    android:layout_below="@+id/tvNamaKompleks"/>

                <TextView
                    android:id="@+id/tvUrutan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urutan Turun Surah"
                    android:textColor="@color/white"
                    android:layout_below="@+id/tvTurun"/>

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUrutan"
                    android:textColor="@color/white"
                    android:text="Surah ke"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>